<!DOCTYPE html>
<html lang="en" class={[
  "[scrollbar-gutter:stable]",
  if(assigns[:theme] && EventasaurusWeb.ThemeHelpers.dark_theme?(assigns[:theme]), do: "dark", else: "")
]}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={get_csrf_token()} />
    
    <%
      # Auth provider configuration
      auth_config = EventasaurusApp.Auth.AuthProvider.frontend_config()
      auth_provider = auth_config.provider

      # Clerk config (only used when Clerk is enabled)
      clerk_publishable_key = auth_config[:publishable_key]
    %>
    
    <.live_title suffix=" Â· Wombie">
      <%= assigns[:page_title] || "Home" %>
    </.live_title>

    <!-- Favicon with bear emoji -->
    <link rel="icon" href="data:image/svg+xml;charset=utf-8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ctext x='50' y='65' font-size='85' text-anchor='middle' alignment-baseline='central'%3EðŸ»%3C/text%3E%3C/svg%3E" />

    <!-- Canonical URL -->
    <%= if assigns[:canonical_url] do %>
      <link rel="canonical" href={assigns[:canonical_url]} />
    <% end %>

    <!-- Hreflang alternate language links -->
    <%= if assigns[:hreflang_path] do %>
      <%
        base_url = get_base_url()
        path = assigns[:hreflang_path]
      %>
      <link rel="alternate" hreflang="en" href={"#{base_url}#{path}?locale=en"} />
      <link rel="alternate" hreflang="pl" href={"#{base_url}#{path}?locale=pl"} />
      <link rel="alternate" hreflang="x-default" href={"#{base_url}#{path}"} />
    <% end %>

    <!-- JSON-LD Structured Data -->
    <%= if assigns[:json_ld] do %>
      <script type="application/ld+json">
        <%= Phoenix.HTML.raw(assigns[:json_ld]) %>
      </script>
    <% end %>

    <!-- Open Graph and Twitter Card meta tags -->
    <%= if assigns[:open_graph] do %>
      <!-- Enhanced Open Graph tags from component -->
      <%= Phoenix.HTML.raw(assigns[:open_graph]) %>
    <% else %>
      <%= if assigns[:meta_title] do %>
        <meta property="og:title" content={assigns[:meta_title]} />
        <meta property="og:description" content={assigns[:meta_description] || ""} />
        <meta property="og:image" content={assigns[:meta_image]} />
        <meta property="og:image:width" content="800" />
        <meta property="og:image:height" content="419" />
        <meta property="og:type" content="website" />
        <meta property="og:url" content={assigns[:canonical_url] || assigns[:meta_url] || ""} />
        <meta property="og:site_name" content="Wombie" />

        <!-- Twitter Card tags -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:title" content={assigns[:meta_title]} />
        <meta name="twitter:description" content={assigns[:meta_description] || ""} />
        <meta name="twitter:image" content={assigns[:meta_image]} />

        <!-- Standard meta description -->
        <meta name="description" content={assigns[:meta_description] || ""} />
      <% else %>
        <!-- Default meta tags -->
        <meta name="description" content="Create and manage events with Wombie - the modern event management platform" />
        <meta property="og:title" content="Wombie" />
        <meta property="og:description" content="Create and manage events with Wombie - the modern event management platform" />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Wombie" />
      <% end %>
    <% end %>
    
    <!-- Main application CSS (includes base theme system) -->
    <link phx-track-static rel="stylesheet" href={~p"/assets/app.css"} />

    <!-- Mapbox GL JS for interactive maps -->
    <link href="https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.css" rel="stylesheet" />
    <script src="https://api.mapbox.com/mapbox-gl-js/v3.0.1/mapbox-gl.js"></script>

    <!-- Theme CSS files -->
    <%= if assigns[:theme] && assigns[:theme] != :minimal do %>
      <link phx-track-static rel="stylesheet" href={"/themes/#{assigns[:theme]}.css"} />
    <% end %>
    
    <!-- Google Fonts - Pacifico for logo -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
    
    <!-- Auth provider meta tag -->
    <meta name="auth-provider" content={auth_provider} />

    <%= if auth_provider == "clerk" do %>
      <!-- Clerk JavaScript library for authentication -->
      <meta name="clerk-publishable-key" content={clerk_publishable_key} />
      <script
        async
        crossorigin="anonymous"
        data-clerk-publishable-key={clerk_publishable_key}
        src="https://cdn.jsdelivr.net/npm/@clerk/clerk-js@5/dist/clerk.browser.js"
        type="text/javascript"
      ></script>
    <% else %>
      <!-- Supabase JavaScript library for identity management -->
      <script src="https://unpkg.com/@supabase/supabase-js@2"></script>
    <% end %>

    <!-- Supabase config for storage (always needed) -->
    
    <!-- Stripe JavaScript library -->
    <script src="https://js.stripe.com/v3/"></script>
    
    <!-- Alpine.js for interactive components -->
    <script defer src="https://unpkg.com/alpinejs@3.14.1/dist/cdn.min.js" integrity="sha384-l8f0VcPi/M1iHPv8egOnY/15TDwqgbOR1anMIJWvU6nLRgZVLTLSaNqi/TOoT5Fh" crossorigin="anonymous"></script>
    
    <!-- Cloudflare Turnstile for bot protection -->
    <% turnstile_config = Application.get_env(:eventasaurus, :turnstile, []) %>
    <%= if turnstile_config[:site_key] do %>
      <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
    <% end %>
    

    <!-- Clerk configuration (only when Clerk is enabled) -->
    <%= if auth_provider == "clerk" do %>
      <script>
        // Clerk configuration for frontend
        window.CLERK_PUBLISHABLE_KEY = "<%= clerk_publishable_key %>";
        window.AUTH_PROVIDER = "clerk";
      </script>
    <% else %>
      <script>
        window.AUTH_PROVIDER = "supabase";
      </script>
    <% end %>
    
    <!-- PostHog configuration -->
    <%
      # Use POSTHOG_PUBLIC_API_KEY for frontend analytics (different from POSTHOG_PRIVATE_API_KEY used by backend)
      posthog_api_key = System.get_env("POSTHOG_PUBLIC_API_KEY")
      posthog_host = "https://eu.i.posthog.com"
    %>
    <%= if posthog_api_key do %>
      <script>
        // Debug: Log PostHog configuration
        console.log("PostHog configuration loaded:", {
          apiKeyPresent: true,
          apiKeyLength: "<%= String.length(posthog_api_key) %>",
          host: "<%= posthog_host %>"
        });
        
        window.POSTHOG_API_KEY = "<%= posthog_api_key %>";
        window.POSTHOG_HOST = "<%= posthog_host %>";
<%= if @conn.assigns[:user] do %>        window.currentUser = {
          id: "<%= @conn.assigns.user.id %>",
          email: "<%= @conn.assigns.user.email %>",
          name: "<%= @conn.assigns.user.name %>"
        };
<% end %>      </script>
    <% else %>
      <script>
        // PostHog disabled (no API key configured)
        window.POSTHOG_API_KEY = null;
      </script>
    <% end %>
    
    <script defer phx-track-static type="text/javascript" src={~p"/assets/app.js"}>
    </script>

    <!-- Geocoding Provider Configuration -->
    <script>
      // Provider configuration for frontend geocoding system
      // This will be read by ProviderFactory to determine which provider to use
      (function() {
        const mapboxToken = "<%= System.get_env("MAPBOX_ACCESS_TOKEN") || "" %>";
        window.GEOCODING_PROVIDER = {
          name: mapboxToken ? 'mapbox' : 'google_places',
          apiKey: mapboxToken
        };

        if (mapboxToken) {
          window.MAPBOX_ACCESS_TOKEN = mapboxToken;
        }

        // Gate for conditional Google Maps loading
        window.USE_GOOGLE_MAPS = window.GEOCODING_PROVIDER?.name === 'google_places';
        console.log("Geocoding provider configured:", window.GEOCODING_PROVIDER.name);
      })();
    </script>

    <!-- Load Google Maps API with environment variable -->
    <script>
      console.log("Setting up Google Maps API loader...");
      
      // Track loading state
      window.googleMapsLoaded = false;
      
      // Error handler
      function handleGoogleMapsError() {
        console.error("Failed to load Google Maps API. Check your API key and network connection.");
        window.googleMapsLoaded = false;
      }
      
      // Success handler
      function initGoogleMaps() {
        console.log("Google Maps API loaded successfully");
        window.googleMapsLoaded = true;
        
        // Call any initialization hooks
        if (typeof window.initGooglePlaces === 'function') {
          console.log("Initializing Google Places components...");
          try {
            window.initGooglePlaces();
          } catch (e) {
            console.error("Error initializing Google Places:", e);
          }
        }
      }
    </script>
    
    <% maps_api_key = System.get_env("GOOGLE_MAPS_API_KEY") || "" %>
    <script>
      // Google Maps API async loader - properly handles loading=async
      (function() {
        // Skip entirely unless explicitly using Google
        if (!window.USE_GOOGLE_MAPS) return;

        const key = "<%= maps_api_key %>".trim();
        if (!key) {
          console.warn("Google Maps API key not configured; skipping load.");
          return;
        }

        const googleMapsLoader = document.createElement('script');
        googleMapsLoader.src = `https://maps.googleapis.com/maps/api/js?key=${encodeURIComponent(key)}&libraries=places&v=weekly&callback=initGoogleMaps`;
        googleMapsLoader.async = true;
        googleMapsLoader.defer = true;
        googleMapsLoader.onerror = handleGoogleMapsError;
        document.head.appendChild(googleMapsLoader);
      })();
    </script>

    <!-- Google Maps Marker Clusterer -->
    <script>
      (function() {
        // Only load if Google Maps is being used
        if (!window.USE_GOOGLE_MAPS) return;

        // Load marker clusterer library
        const markerClustererScript = document.createElement('script');
        markerClustererScript.src = 'https://unpkg.com/@googlemaps/markerclusterer/dist/index.min.js';
        markerClustererScript.async = true;
        document.head.appendChild(markerClustererScript);
      })();
    </script>

    <!-- Mobile Navigation Script -->
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        
        function toggleMobileMenu() {
          const isOpen = !mobileMenu.classList.contains('translate-x-full');
          
          if (isOpen) {
            // Close menu
            mobileMenu.classList.add('translate-x-full');
            mobileMenuOverlay.classList.add('opacity-0', 'pointer-events-none');
            document.body.classList.remove('overflow-hidden');
          } else {
            // Open menu
            mobileMenu.classList.remove('translate-x-full');
            mobileMenuOverlay.classList.remove('opacity-0', 'pointer-events-none');
            document.body.classList.add('overflow-hidden');
          }
        }
        
        if (mobileMenuButton && mobileMenu) {
          mobileMenuButton.addEventListener('click', toggleMobileMenu);
          mobileMenuOverlay.addEventListener('click', toggleMobileMenu);
          
          // Close menu on escape key
          document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !mobileMenu.classList.contains('translate-x-full')) {
              toggleMobileMenu();
            }
          });
        }
      });
    </script>
  </head>
