<main class="relative">
  <.flash_group flash={@flash} />
  
  <div class="min-h-screen py-8">
    <.container>
      <%= unless assigns[:hide_gradient] do %>
        <div class="p-8">
          <%= @inner_content %>
        </div>
      <% else %>
        <div class="bg-white/60 backdrop-blur-sm rounded-2xl border border-white/20 p-8">
          <%= @inner_content %>
        </div>
      <% end %>
    </.container>
  </div>
</main> 